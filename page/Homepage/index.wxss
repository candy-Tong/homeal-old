/* page/HomePage/index.wxss */

.top {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #a91b07;
  overflow: hidden;
  color: white;
  padding: 1px 0 7px 0;
  font-size: 14px;
}

.position {
  display: inline-block;
}



.currentArea {
  float: left;
  text-align: center;
  height: 27px;
  line-height: 27px;
  margin-right: 9px;
  color: rgba(255, 255, 255, 1);
}

.search {
  position: relative;
  flex-grow: 1;
  background: white;
  border-radius: 25px;
  height: 25px;
  line-height: 25px;
}

.search-icon {
  display: inline-block;
  position: absolute;
  top: 5px;
  left: 12px;
  line-height: 25px;
}

.message {
  float: right;
  margin: 0 24px 0 20px;
  text-align: center;
}



/*图片轮播*/

.banner {
  width: 750rpx;
  height: 420rpx;
}

.banner-image {
  width: 750rpx;
}

/*chefs*/

.main_rest-wrapper {
  border: 1px solid rgba(158, 167, 180, 0.3);
  margin-top: 7px;
  padding: 0 40rpx;
  background: #fff;
}

.main_rest-wrapper:last-child {
  margin-bottom: 20rpx;
}

/*kitchen-info*/

.kitchen-info {
  position: relative;
  overflow: hidden;
}

.chef_avatar {
  float: left;
  margin: 8px 14px 8px 0;
  width: 48px;
  height: 48px;
  border-radius: 48px;
}

.info-wrapper {
  margin: 0 122px 0 62px;
}

.kitchen_name {
  margin-top: 8px;
  color: #000;
  font-weight: 900;
  font-size: 16px;
  line-height: 24px;
  height: 24px;
}

.chef_brief {
  width: 100%;
  color: #4a4a4a;
  font-weight: 500;
  font-size: 14px;
  line-height: 24px;
  height: 24px;
  text-overflow: ellipsis;
  overflow: hidden;
}

.show-more {
  float: right;
  color: #9b9b9b;
  font-size: 12px;
  line-height: 24px;
  height: 24px;
  margin-top: 32px;
}


.image-wrapper {
  overflow: hidden;
}

.dish-image {
  width: 330rpx;
  height: 186rpx;
  margin-bottom: 3px;
  overflow: hidden;
}

.content {
  color: rgba(0, 0, 0, 0.87);
  font-weight: 600;
  font-size: 14px;
  margin: 6px 0 12px 0;
  clear: both;
}

.tag {
  color: rgba(176, 18, 10, 1);
  font-size: 10px;
  height: 12px;
  line-height: 12px;
  overflow: hidden;
  margin-bottom: 16px;
}


