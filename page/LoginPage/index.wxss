/* page/LoginPage/index.wxss */

.Login-page {
  background-image: url("http://candytong.xyz/homeal/login/Group.png");
  background-size: 100%;
  background-repeat: no-repeat;
  width: 100%;
  height: 100%;
}

.background {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.name {
  color: white;
  padding-top: 65px;
  text-align: center;
  font-size: 48px;
  font-family: 'Brush Script Std';
}

.phone {
  margin: 17px 125rpx 0 125rpx;
  color: white;
  opacity: 0.87;
  font-size: 14px;
  border-bottom: 1px solid white;
}

.verification {
  margin: 17px 125rpx 0 125rpx;
  color: white;
  opacity: 0.87;
  font-size: 14px;
  border-bottom: 1px solid white;
}

.user-input {
  position: relative;
}

.get-verification {
  position: absolute;
  display: inline-block;
  height: 22px;
  right: 125rpx;
  bottom: 0px;
  font-size: 10px;
  line-height: 22px;
}

.ready{
  background-color: #8dc81b
}

.error{
  color: #ff2400;
}

.errorMsg{
  margin: 14px 125rpx 14px 125rpx;
  color: #ff2400;
  font-size: 14px;
  line-height: 14px;
  height:14px;
}

.submit {
  width: 236px;
  height: 40px;
  background: #ffb300;
  border-radius: 100px;
  font-size: 16px;
  color: white;
}

.tip {
  display: block;
  color: #fff;
  font-size: 8px;
  opacity: 0.54;
  text-align: center;
  margin-top: 12px;
}

.other-login {
  display: block;
  color: #fff;
  font-size: 8px;
  opacity: 0.87;
  text-align: center;
  margin-top: 60px;
}


