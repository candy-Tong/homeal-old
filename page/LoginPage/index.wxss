/* page/LoginPage/index.wxss */

.Login-page {
  background-image: url("http://119.29.162.17/homeal/login/Group.png");
  background-size: 100%;
  background-repeat: no-repeat;
  width: 100%;
  height: 100%;
}

.background {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.name {
  color: white;
  padding-top: 110rpx;
  text-align: center;
  font-size: 48px;
  font-family: 'Brush Script Std';
}

.phone {
  margin: 106rpx 128rpx 0 128rpx;
  color: white;
  opacity: 0.87;
  font-size: 28rpx;
  border-bottom: 1px solid white;
}

.verification {
  margin: 42rpx 128rpx 0 128rpx;
  color: white;
  opacity: 0.87;
  font-size: 28rpx;
  border-bottom: 1px solid white;
}

.user-input {
  position: relative;
}

.get-verification {
  position: absolute;
  display: inline-block;
  height: 44rpx;
  right: 125rpx;
  bottom: 0px;
  font-size: 10px;
  line-height: 44rpx;
}

.ready{
  background-color: #8dc81b
}

.error{
  color: #ff2400;
}

.submit {
  width: 510rpx;
  height: 80rpx;
  background-color: #ffb300;
  border-radius: 200rpx;
  font-size: 32rpx;
  margin-top: 78rpx;
  color: white;
}

.tip {
  display: block;
  color: #fff;
  font-size: 24rpx;
  opacity: 0.54;
  text-align: center;
  margin-top: 14rpx;
}

.other-login {
  display: block;
  color: #fff;
  font-size: 24rpx;
  opacity: 0.87;
  text-align: center;
  margin-top: 120rpx;
}


