/* page/BookPage/index.wxss */

page {
  background-color: rgba(249, 249, 249, 0.9);
}

.chef-info {
  border-top: 1rpx solid rgb(200, 199, 204);
  overflow: hidden;
  border-bottom: 1rpx solid rgb(200, 199, 204);
  background-color: #fff;
}

.avatar {
  float: left;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  margin: 42rpx;
}

.chef-name {
  float: left;
  margin-top: 72rpx;
  font-size: 40rpx;
  font-weight: 700;
  line-height: 40rpx;
}

.line-item {
  position: relative;
  border-bottom: 1rpx solid rgb(200, 199, 204);
  overflow: hidden;
  height: 110rpx;
  line-height: 110rpx;
  background-color: #fff;
}

.icon-menu, .icon-date, .icon-person {
  float: left;
  margin: 32rpx 24rpx 30rpx 32rpx;
  line-height: 110rpx;
}

.line-text {
  float: left;
  font-size: 15px;
  font-weight: 600;
}

.content {
  margin-left: 20rpx;
}

.icon-wrapper {
  float: right;
  padding: 42rpx 50rpx 48rpx 50rpx;
}

.icon-add {
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
  /*margin: 32rpx 32rpx 30rpx 0;*/
}

.icon-dec {
  position: absolute;
  bottom: 32rpx;
  right: 104rpx;
}

.disable{
  opacity: 0.3
}

.price-wrapper {
  margin-top: 56rpx;
}

.price {
  float: left;
  margin-left: 32rpx;
  font-size: 32rpx;
  font-weight: 700;
}

.pay {
  float: right;
  margin-right: 32rpx;
  font-size: 38rpx;
  font-weight: 700;
  color: rgba(255, 179, 0, 1);
}

.note {
  text-align: center;
  padding: 16rpx 0;
}

.note-content {
  display: block;
  width: 690rpx;
  height: 238rpx;
  margin: 0 auto 82rpx auto;
  padding: 36rpx 14rpx;
  background-color: #fff;
  border-radius: 8rpx;
  font-size: 15px;
  font-weight: 600;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 42px;
  line-height: 42px;
  font-size: 17px;
  text-align: center;
  color: #fff;
  background-color: #d62121;
  font-weight: 700;
}
