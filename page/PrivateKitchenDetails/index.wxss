/* page/PrivateKitchenDetails/index.wxss */

/*图片轮播*/

.banner {
  width: 750rpx;
  height: 512rpx;
}

.banner-image {
  width: 750rpx;
}

.kitchen-info {
  position: relative;
  overflow: hidden;
  margin-top: 18px;
  margin-bottom: 12px;
}

.avatar {
  float: left;
  margin: 0 15px 0 15px;
  width: 60px;
  height: 60px;
  border-radius: 60px;
}

.info-wrapper {
  margin-left: 90px;
}

.kitchen_name {
  float: left;
  color: #000;
  font-weight: 700;
  font-size: 20px;
  line-height: 20px;
}

.option {
  float: right;
  font-size: 15px;
  color: rgba(140, 140, 140, 1);
  height: 19px;
  line-height: 19px;
  overflow: hidden;
}

.option-favor {
  float: right;
  margin-right: 11px;
}

.option-chat {
  float: right;
  margin-right: 11px;
}
.chat-icon{
  float: right;
  margin-right: 3px;
}

.favor-icon{
  float: right;
  margin-right: 3px;
}

.chef_brief {
  margin-top: 10px;
  margin-bottom: 6px;
  color: rgba(17, 17, 17, 1);
  font-size: 16px;
  line-height: 16px;
  font-weight: 500;
}

.tag {
  font-size: 15px;
  color: rgba(232, 78, 64, 1);
  line-height: 15px;
}

.tag-icon {
  height: 15px;
  line-height: 15px;
}

.navigate {
  position: relative;
  display: flex;
  clear: both;
  overflow: hidden;
  text-align: center;
  font-size: 16px;
  color: rgba(132, 132, 132, 1);
  font-weight: 700;
  /*padding: 12px 0;*/
  margin-bottom: 14px;
}

.nav-item{
  padding: 12px 0;
  flex: 1;
}

.nav-item_on{
  color: rgba(176, 18, 10, 1);
}

.navbar__slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom:6px;
  width: 250rpx;
  height: 3px;
  background-color: rgba(176, 18, 10, 1);
  -webkit-transition: -webkit-transform .3s;
  transition: -webkit-transform .3s;
  transition: transform .3s;
  transition: transform .3s, -webkit-transform .3s;
}

.nav-panel{
  margin: 0 16px;
  -webkit-overflow-scrolling: touch;
}

.menu{
  margin-top: 14px;
  font-size: 14px;
  font-weight: 700;
}

.index-wrapper{
  position: relative;
  display: flex;
  margin-bottom: 13px;
}

.menu_index{
  width: 3em;
  text-align: center;
  padding: 0 14px;
  height: 14px;
  line-height: 14px;
}
.line{
  position: relative;
  bottom: 7px;
  flex: 1;
  height: 14px;
  line-height: 14px;
  border-bottom: 1px solid rgba(192, 192, 192, 1);
}

.menu-image{
  width: 100%;
  height: 368rpx;
}

.menu_name{
  float: left;
  color: rgba(0, 0, 0, 0.78);
  font-weight: 700;
}

.price{
  float: right;
  color: rgba(255, 179, 0, 1);
}

.menu_desc{
  clear: both;
  color: rgba(0, 0, 0, 0.78);
  font-weight: 500;
}
.person_num{
  color: rgba(0, 0, 0, 0.78);
  font-weight: 500;
}
