/* page/PrivateKitchenDetails/index.wxss */

/*图片轮播*/

.banner {
  width: 750rpx;
  height: 340rpx;
}

.banner-image {
  width: 750rpx;
}

.kitchen-info {
  position: relative;
  overflow: hidden;
  margin-top: 18px;
  margin-bottom: 24px;
}

.avatar {
  float: left;
  margin: 0 15px 0 15px;
  width: 60px;
  height: 60px;
  border-radius: 60px;
}

.info-wrapper {
  margin-left: 90px;
}

.kitchen_name {
  float: left;
  color: #000;
  font-weight: 900;
  font-size: 24px;
  line-height: 24px;
}

.option {
  float: right;
  font-size: 15px;
  color: rgba(140, 140, 140, 1);
  overflow: hidden;
}

.option-collect {
  float: right;
}

.option-chat {
  float: right;
}

.chef_brief {
  margin-top: 10px;
  margin-bottom: 6px;
  color: rgba(17, 17, 17, 1);
  font-size: 16px;
  line-height: 16px;
  clear: both;
  display: inline-block;
  font-weight: 500;
}

.tag {
  font-size: 15px;
  color: rgba(232, 78, 64, 1);
  line-height: 15px;
}

.tag-icon {
  height: 15px;
  line-height: 15px;
}

.navigate {
  clear: both;
  overflow: hidden;
  margin-top: 20rpx;
}

