<!--page/OrderPage/index.wxml-->

<view class="order-page">

  <!--导航-->
  <view class="navbar">
    <block wx:for="{{tabs}}" wx:key="*this">
      <view id="{{index}}" class="navbar-item {{activeIndex == index ? 'navbar-item_on' : ''}}" bindtap="tabClick">
        {{item}}
      </view>
    </block>
    <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
  </view>


  <view class="order__panel">
    <view class="weui-tab__content" hidden="{{activeIndex != 0}}">

      <view class="order" wx:for="{{orderList}}">

        <image src="{{item.avatar}}" class="avatar" mode="aspectFill"></image>
        <view class="info-wrapper">
          <view class="status">{{item.accept==0?'未接单':'已接单'}}</view>
          <view class="chef-name">{{item.name}}</view>
          <view class="order-time">
            预约时间: {{item.date}} {{item.time}}
          </view>
          <view class="menu">
            套餐: {{item.menu}}
          </view>
          <view class="person_num">
            客人: {{item.person_num}}
          </view>
          <view class="note">
            备注: {{item.note}}
          </view>
          <view class="option">
            <view class="contact-chef">联系私厨</view>
            <view class="cancel-order">取消订单</view>
            <view class="pay" style="{{item.accept==0?'visibility:hidden':''}}">付款</view>
          </view>

        </view>

      </view>


    </view>
    <view class="weui-tab__content" hidden="{{activeIndex != 1}}">选项二的内容</view>
    <view class="weui-tab__content" hidden="{{activeIndex != 2}}">选项三的内容</view>
  </view>

</view>